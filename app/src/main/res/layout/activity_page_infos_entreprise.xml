<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageInfosEntreprise">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="412dp"
        android:layout_height="68dp"
        android:background="@color/teal_700"
        android:minHeight="?actionBarSize"
        android:theme="?actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Details"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:hint="Contact"/>

    <EditText
        android:id="@+id/Courriel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Contact"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:hint="Courriel"/>

    <EditText
        android:id="@+id/telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Courriel"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:hint="TelÃ©phone"/>

    <EditText
        android:id="@+id/SiteWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telephone"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:hint="Site web"/>

    <EditText
        android:id="@+id/Adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SiteWeb"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:hint="Adresse"/>

    <EditText
        android:id="@+id/Ville"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Adresse"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:hint="Ville"/>

    <EditText
        android:id="@+id/CodePostal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ville"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:hint="Code Postal"/>

    <Button
        android:id="@+id/BtnSauvegarde"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/CodePostal"
        android:layout_marginTop="75dp"
        android:text="Sauvegarder" />

    <Button
        android:id="@+id/BtnRetour"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/CodePostal"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="75dp"
        android:text="Retour" />


</RelativeLayout>